{
  "manifest_version": 2,

  "name": "Sai Ram - First app",
  "description": "This extension demonstrates a browser action power of GRIT.",
  "version": "1.0",
  "background": {
    "page": "popup.html"
  },
  "permissions": [
        "tabs", "<all_urls>","downloads"
    ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts":[{
  "js":["jquery.min.js","background.js"],
  "matches":["https://*//","http://*//"]
  }],
  "options_page": "options.html"
}